
<div class="container">

  {{#if message}}
    <div class="alert alert-info" role="alert">
      {{message}}
    </div>
  {{/if}}
  <div class="row justify-content-center p-5">
      <div class="col-sm-6">
          <div class="text-center mb-5">
              <h3>Login</h3>
          </div>
          <div class="row justify-content-around flex-row">
              <form action="/teacherLogin" method="post">
                  <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" required email>
                    <span class="help-text" *ngIf="emailVar && emailVar.touched && !emailVar.valid">
                      Please enter a valid email
                    </span>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required minlength="8">
                    <span class="help-text" *ngIf="passwordVar && passwordVar.touched && !passwordVar.valid">Please enter a password of minimum 8 character</span>
                  </div>
                  
                  <button type="submit" class="btn btn-primary">Submit</button>
              </form>
          </div>
      </div>
  </div>

</div>