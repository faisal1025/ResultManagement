
<div class="container">
  {{#if message}}
    <div class="alert alert-info" role="alert">
      {{message}}
    </div>
  {{/if}}

  <div class="row justify-content-center p-5">
      <div class="col-sm-6">
          <div class="text-center mb-5">
              <h3>Check Result</h3>
          </div>
          <div class="row justify-content-around flex-row">
              <form action="/studentLogin" method="post">
                  <div class="mb-3">
                    <label for="roll" class="form-label">Roll Number</label>
                    <input type="number" class="form-control" id="roll" name="roll" onchange="validateRoll(e)" required>
                    <span class="help-text">
                      Please enter a valid roll number
                    </span>
                  </div>
                  <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" onchange="validateName(e)" required>
                    <span class="help-text">
                      Please enter a password of minimum 8 character
                    </span>
                  </div>
                  
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
          </div>
      </div>
  </div>

</div>