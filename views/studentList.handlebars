
<div class="container">

    <div class="row flex-row-reverse mb-3">
        <a type="button" class="btn btn-primary" href="/AddStudent">
            Add Student
        </a>
    </div>

    <div style="font-family: cursive; margin: 7px 0px;">Total {{students.length}} students</div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Roll Number</th>
                <th scope="col">Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Score</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
                <tr>
                    <th scope="row">{{this.dataValues.roll}}</th>
                    <td>{{this.dataValues.name}}</td>
                    <td>{{this.dataValues.dob}}</td>
                    <td>{{this.dataValues.score}}</td>
                    <td>
                        <a class="btn btn-primary" href="/editStudent/{{this.dataValues.roll}}" (click)="onEditStudent(data)">Edit</a>
                        <a class="btn btn-danger mx-2" href="/deleteStudent/{{this.dataValues.roll}}">Delete</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

</div>